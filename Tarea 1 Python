#6. Suma de numeros pares del 1 al 50
suma = 0
for numero in range (1, 51):
    if num % 2 == 0
       suma += numero

print(f"La suma de los numeros pares entre 1 y 5o es de: {suma}")

#7. Suma de numeros primos entre 1 y 100
def num_primo(n):
    if n < 2:
        return False 
    for i in range(2, int(n**0.5) +1):
        if n % i == 0:
            return False 
    return True 

suma_primos = 0

for num in range(1,101):
    if num_primo(num):
        suma_primos += num

print(f" La suma de todos los numeros primos hasta en 100 es de: {suma_primos}")   
